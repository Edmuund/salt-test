.session.container
  .flex
    %h3.center-align Sign In
    %br/
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email
        = f.email_field :email, class: 'validate'
      .field
        = f.label :password
        = f.password_field :password
      %br/
      - if devise_mapping.rememberable?
        .field.center-align
          = f.check_box :remember_me
          = f.label :remember_me
      .actions.center-align
        %button.waves-effect.waves-light.btn#devise_button{ type: 'submit', name: 'commit', 'data-disable-with': 'Sign In'} Sign In
    %br/
    .center-align= render 'devise/shared/links'