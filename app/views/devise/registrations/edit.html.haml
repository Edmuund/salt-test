.center-align.flow-text= devise_error_messages!
%br/
.registration.edit.container
  .flex.edit
    %br/
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .field
        = f.label :email
        = f.email_field :email, autofocus: true
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div Currently waiting confirmation for: #{resource.unconfirmed_email}
      .field
        = f.label :password
        %i (leave blank if you don't want to change it)
        = f.password_field :password, autocomplete: 'off', class: 'validate', minlength: 6
      .field
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: 'off', class: 'validate', minlength: 6
      .field
        = f.label :current_password
        %i (we need your current password to confirm your changes)
        = f.password_field :current_password, autocomplete: 'off'
      %br/
      .actions.center-align
        %button.waves-effect.waves-light.btn#devise_button{ type: 'submit', name: 'commit', 'data-disable-with': 'Update'} Update
    %br/
    %h3.center-align Cancel my account
    %br/
    .center-align= button_to 'Cancel my account', registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete
    %br/
    .center-align= link_to 'Back', :back